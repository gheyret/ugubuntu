/* General page layout */
@font-face {
	font-family: 'UKIJ Tuz Tom';
	font-style:normal;
	font-weight:normal;
	src: url('./UKIJTuT.eot');
	src: local('UKIJ Tuz Tom Regular'), local('UKIJ Tuz Tom'), url('./UKIJTuT.ttf') format('truetype');
}

body {direction: rtl; background:#fff;background-image:url(dotted-bg.png); margin:0; padding:0.8em 0; text-align:center;}
body,td,input,textarea {
font-size:13px;
font-family: 'UKIJ Tuz Tom','Ubuntu', 'Bitstream Vera Sans', 'DejaVu Sans',Tahoma, sans-serif;  
line-height: 1.3;

}
a:link,a:active,a:visited {text-decoration:none;}
a:hover {text-decoration:underline;}
p {margin-top:0;}
.qa-q-item-what,
.qa-c-item-what{color:#4D1F41;font-weight:bold;}
/*my code*/
.qa-nav-cat-item a{color:#DD4814; padding-left:0.6em}
.qa-nav-cat-item a:hover{color:#b53e7e;}
.qa-feed-link {
   direction: rtl;
    color: #DD4A14;
    font-family: 'UKIJ Tuz Tom','Ubuntu','Bitstream Vera Sans','DejaVu Sans',Tahoma,sans-serif;
    font-size: 13px;
    font-weight: bold;
    line-height: 1.5em;
    text-shadow: 1px 1px 0 #FFFFFF;
}

/*end my code*/

.qa-body-wrapper {background:#fff url(grads.png) repeat-x; width:980px; margin:0 auto; text-align:right;
		-webkit-border-radius: 4px;
		-moz-border-radius: 4px;
		border-radius: 4px;
		-webkit-box-shadow: 0 0 10px #aea79f;
		-moz-box-shadow: 0 0 10px #aea79f;
		box-shadow: 0 0 10px #aea79f; 

}

/* Clearing classes */

.qa-nav-main-clear,
.qa-nav-sub-clear,
.qa-q-item-clear,
.qa-q-view-clear,
.qa-a-item-clear,
.qa-c-item-clear,
.qa-footer-clear,
.qa-vote-count-clear,
.qa-page-links-clear {clear:both;}

/* Headings */

h1 {font-size:22px; margin:1em 0}
h2 {font-size:16px; padding-top:12px; clear:both;}

.qa-error {background:#fee; border:1px solid #c00; color:#c00; font-size:16px; padding:.5em; margin:1em 0; font-weight:bold;}
	.qa-error a {color:#900; text-decoration:underline;}
	.qa-error a:hover {color:#f00;}

/* Page sections */


.qa-sidepanel {float:left; width:226px; margin-left:18px;}
* html .qa-sidepanel {margin-left:10px;} /* IE6 */
.qa-sidebar {padding:12px; font-size:14px; background:#DDDDDD; -moz-border-radius: 8px; border-radius: 8px; margin:24px 0;}
.qa-feed {
    background: url("rss-feed.png") no-repeat scroll 0 4px #DDDDDD;
    border-radius: 8px 8px 8px 8px;
    height: 35px;
    margin: 24px 0;
    padding: 1em;
}
.qa-feed-headline {
    font-size: 15px;
    font-weight: bold;
}
.qa-feed-wrapp-div{margin-top:1em}
.qa-main {padding-right:20px; float:right; margin-bottom:2em; width:700px;}
.qa-main-hidden h1 {color:#999;}
.qa-footer {clear:both; background:#DDDDDD; color:#F15D22; font-size:13px; padding:12px;}
* html .qa-footer {padding-top:6px;} /* IE6 */

/* Header sections */

.qa-logo {
    color: #DD4814;
    float: right;
    font-size: 30px;
    font-weight: bold;
    margin: 0.7em 1em 0 1em;
}
.qa-logo-link, .qa-logo-link:hover {color:#fff;}

.qa-nav-user {float:left; margin:0.5em 1.7em; font-size:15px; color:#fff; white-space:nowrap;}
.qa-nav-user-list {list-style:none; padding:0; margin:0; display:inline;}
.qa-nav-user-item {display:inline; margin-left:12px; font-weight:bold;}
.qa-nav-user-link {color:#fff;}
.qa-logged-in {display:inline;}

.qa-search {float:left; clear:right; margin:0  0 1em 2em; white-space:nowrap;}
.qa-search-field {width:12em; margin-left:2px;}

/* Main, sub and category navigation */

.qa-nav-main {clear:both; background: #dd4814 url(bg-top-bar.png)  repeat-x;}
.qa-nav-main-list {font-size:16px;font-weight:bold;list-style:none; padding:0; margin:0;}
.qa-nav-main-item,.qa-nav-main-item-opp { border-right:1px dotted #fff}
.qa-nav-main-item {float:right;}
.qa-nav-main-item a:hover{text-decoration:none}
.qa-nav-main-item-opp {float:left; margin-left:4px;}
.qa-nav-main-link {color:#FFF; display:block; padding:1.3em;}

.qa-nav-main-ask {font-weight:bold;}
.qa-nav-main-ask:hover{background-color:#E78761;}
.qa-nav-main-selected {background-color:#787169;}
.qa-nav-main-activity:hover, .qa-nav-main-selected{background-color:#787169;}
.qa-nav-main-questions:hover, .qa-nav-main-selected{background-color:#E78761;}
.qa-nav-main-unanswered:hover, .qa-nav-main-selected{background-color:#E78761;}
.qa-nav-main-tag:hover, .qa-nav-main-selected{background-color:#E78761;}
.qa-nav-main-user:hover, .qa-nav-main-selected{background-color:#E78761;}
.qa-nav-sub {clear:both; float:right; padding-top:3px;}
.qa-nav-sub-list {font-size:15px; list-style:none; padding:0; margin:0;}
.qa-nav-sub-item {float:right; margin-right:2px;margin-bottom:2px;}
.qa-nav-sub-link {background-color:#4D1F41; color:#fff; font-weight:bold; padding:5px 8px; display:block;border-radius: 5px;}
.qa-nav-sub-link:hover, .qa-nav-sub-selected {background-color:#62435A; text-decoration:none;}
.qa-nav-sub-link  .qa-nav-selected {background:#396e63;}

.qa-nav-cat-list {font-size:15px; list-style:none; padding:12px; margin:0; margin:24px 0;background:#DDDDDD; border-radius: 8px;}
.qa-nav-cat-item {margin:0.5em 0;}
.qa-nav-cat-link {font-weight:bold;color:#F15D22;}
.qa-nav-cat-selected,.qa-nav-cat-selected:hover {text-decoration:none; color:#494949;}

/* Pagination */

.qa-page-links {padding:12px 0; font-size:15px; clear:both; zoom:1;} /* zoom:1 for IE6 */
.qa-page-links-label {color:#333;}
.qa-page-links-list {margin:0; padding:0; list-style:none; display:inline;}
.qa-page-links-item {display:inline;}
.qa-page-link,.qa-page-selected,.qa-page-prev,.qa-page-next {margin:3px 1px; padding:3px 5px; border:1px solid #666;}
.qa-page-link:hover,.qa-page-prev:hover,.qa-page-next:hover {text-decoration:none; background-color:#777; color:#eee;}
.qa-page-link {color:#333;}
.qa-page-prev,.qa-page-next {color:#333; background:#DDD;}
.qa-page-selected {color:#fff; background-color:#666;}
.qa-page-ellipsis {color:#666;}

/* Standard form (tall version) */

.qa-form-tall-table {
    background-color: #dddddd;
    padding-top: 0.7em;
    width: 500px;
   border-radius: 10px;
}
.qa-form-tall-spacer {background:#E3F4FF; line-height:1px; padding:0; font-size:1px;}
.qa-form-tall-ok {background:#efe; border:1px solid #090; color:#090; font-size:18px; padding:6px; text-align:center;}
.qa-form-tall-label {color:#253845; padding:12px 8px 2px 8px; font-size:13px; font-weight:bold;}
.qa-form-tall-data {padding:0px 8px 10px 8px; width:480px;}
.qa-form-tall-text,.qa-form-tall-number {padding:3px;}
.qa-form-tall-text {width:480px; border:1px solid #658296;}
.qa-form-tall-number {width:48px; border:1px solid #658296;}
.qa-form-tall-checkbox {float:right; margin-left:6px;}
.qa-form-tall-image {text-align:center; margin-top:12px;}
	.qa-form-tall-image img {border:1px solid #494949;}
.qa-form-tall-error {background:#fee; border:1px solid #c00; color:#c00; font-size:15px; margin-top:6px; padding:.5em; display:inline-block;}
.qa-form-tall-note {margin-top:6px;}
	.qa-form-tall-note a {color:#fff; text-decoration:underline;}
	.qa-form-tall-note a:hover {color:#fff;}
.qa-form-tall-buttons {padding:8px; text-align:center;}

/* Standard form (wide version) */

.qa-form-wide-table {background-color:#DDDDDD;border-radius: 8px;}
.qa-form-wide-spacer {background:#E3F4FF; line-height:1px; padding:0; font-size:1px;}
.qa-form-wide-ok {background:#efe; border:1px solid #090; color:#090; font-size:16px; padding:6px; text-align:center;}
.qa-form-wide-label {color:#253845; padding:6px 10px; font-size:13px; font-weight:bold; white-space: nowrap;}
.qa-form-wide-data {padding:6px 10px;}
.qa-form-wide-text,.qa-form-wide-number {padding:3px;}
.qa-form-wide-text {width:320px; border:1px solid #658296;}
.qa-form-wide-number {width:48px; border:1px solid #658296; vertical-align:middle;}
.qa-form-wide-error {display:inline-block; background:#fee; border:1px solid #c00; color:#c00; font-size:15px; margin-left:6px; padding:.5em;}
.qa-form-wide-note {font-size:13px; margin-left:4px; color:#235272;}
.qa-form-wide-buttons {padding:8px; text-align:center;}

/* Standard form (light version - buttons only) */

.qa-form-light-button,.qa-form-light-hover {background:none; border:1px solid #fff; cursor:pointer; padding:0; margin-right:6px; font-size:13px; overflow: visible;} /* overflow:visible for IE, 1px border needed for tooltips to work more reliably in IE */
	.qa-form-light-button {color:#666;}
	.qa-form-light-hover, .qa-form-light-button:hover {color:#494949;}

/* Standard form (basic version - buttons only) */

.qa-form-basic-button,.qa-form-basic-hover {background:none repeat scroll 0 0 #DD4814; border:none; font-size:15px; font-weight:bold;  margin:4px 4px 4px 0; padding:5px 6px; vertical-align:middle;}
	.qa-form-basic-button {color:#FFF;}
	.qa-form-basic-hover,.qa-form-basic-button:hover {background:#494949; border:none; color:#D9E3EA;}

.qa-form-basic-note {font-size:13px;}

/* Question list */

.qa-q-list-item {margin-bottom:24px; padding-bottom:1px; zoom:1;} /* zoom for IE, padding for early FF */
.qa-q-item-main {float:left; width:500px;}
.qa-q-item-title {color:#494949; font-weight:bold; font-size:16px;}
	.qa-q-item-title a {color:#DD4814;}
	.qa-q-item-title a:hover {color:#4D1F41;}
.qa-q-item-avatar {display:inline-block; vertical-align:middle; margin-top:6px; margin-right:2px;}
.qa-q-item-meta {display:inline-block; vertical-align:middle; margin-top:6px;}
.qa-q-item-when-data {font-weight:bold;}
.qa-q-item-who-title {font-size:80%; font-weight:bold; color:#900707;}
.qa-q-item-points-data {font-weight:bold;}
.qa-q-item-tags {margin-top:8px;}
.qa-q-item-tag-list {list-style:none; margin:0; padding:0;}
.qa-q-item-tag-item {display:inline;}

.qa-suggest-next {font-size:15px; padding:0.5em 0; text-align:right; clear:both;}
	.qa-suggest-next a {color:#fff; padding:0.3em 0.6em 0.4em 0.4em; background:#4D1F41; margin:0 2px;border-radius: 8px;}
	.qa-suggest-next a:hover {color:#fff; background:#F15D22; text-decoration:none;}

/* Votes */

/* qa-*-hover classes are substituted by JS (for IE), qa-*-button:hover is a backup for other browsers if JS is off */

.qa-voting {background:#4D1F41; float:right; height:42px; overflow:hidden; padding:18px 0;border-radius: 20px;}
.qa-vote-buttons {float:right; width:16px; padding-right:12px;}

.qa-vote-one-button {margin:12px 0;}
.qa-vote-second-button {margin-top:12px;}

.qa-vote-up-button,.qa-vote-up-hover,.qa-vote-up-disabled {background:url(vote-buttons.gif) no-repeat; border:0; font-size:1px; height:15px; width:17px;}
	.qa-vote-up-button {background-position:0 0; color:#38544e;}
	.qa-vote-up-disabled {background-position:0 -60px; color:#38544e;}
	.qa-vote-up-hover,.qa-vote-up-button:hover {background-position:0 -15px; color:#65968e;}

.qa-vote-down-button,.qa-vote-down-hover,.qa-vote-down-disabled {background:url(vote-buttons.gif) no-repeat; border:0; font-size:1px; height:15px; width:17px;}
	.qa-vote-down-button {background-position:-17px 0; color:#38544e;}
	.qa-vote-down-disabled {background-position:-17px -60px; color:#38544e;}
	.qa-vote-down-hover,.qa-vote-down-button:hover {background-position:-17px -15px; color:#65968e;}
	
.qa-voted-up-button,.qa-voted-up-hover {background:url(vote-buttons.gif) no-repeat; border:0; font-size:1px; height:15px; width:17px;}
	.qa-voted-up-button {background-position:0 -30px; color:#f3cb7f;}
	.qa-voted-up-hover,.qa-voted-up-button:hover {background-position:0 -45px; color:#f3cb7f;}

.qa-voted-down-button,.qa-voted-down-hover {background:url(vote-buttons.gif) no-repeat; border:0; font-size:1px; height:15px; width:17px; margin:12px 0;}
	.qa-voted-down-button {background-position:-17px -30px; color:#f3cb7f;}
	.qa-voted-down-hover,.qa-voted-down-button:hover {background-position:-17px -45px; color:#f3cb7f;}

.qa-vote-count {float:right; text-align:center;}

.qa-netvote-count {width:60px; display:block;}
.qa-netvote-count-data {color:#fff;padding-top:1px; font-size:20px; font-weight:bold; display:block;}
.qa-netvote-count-pad {font-size:13px;color:#fff;display:block;}

.qa-upvote-count,.qa-downvote-count {width:48px; height:27px; position:relative; top:-4px; display:block;}
.qa-upvote-count-data,.qa-downvote-count-data {font-size:18px; font-weight:bold; display:inline;}
.qa-upvote-count-pad,.qa-downvote-count-pad {font-size:9px; display:none;}

/* Answer count */

.qa-a-count {background:#2DB651; text-align:center; width:60px; height:42px; overflow:hidden; float:right; padding:18px 8px; margin-right:1.5em;border-radius: 50px;}
.qa-a-count-data {font-size:24px; font-weight:bold; color:#fff;display:block;}
.qa-a-count-pad {font-size:13px; color:#fff;block;}

/* Top tags and users tables */

.qa-top-tags-table {float:right; border-collapse:collapse; margin-bottom:1em;}
.qa-top-tags-count {border:1px solid #658296; border-right:1px dashed #c1ced6; color:#235272; text-align:left; padding:6px 8px 6px 12px;}
.qa-top-tags-label {border:1px solid #658296; border-left:none; background:#fff; padding:3px 16px 0px 8px;}
	.qa-top-tags-label .qa-tag-link {font-weight:normal;}
	.qa-top-tags-label a:hover{color:#d9e3ea}
.qa-top-tags-spacer {padding:0 4px;}

.qa-top-users-table {float:right; border-collapse:collapse; margin-bottom:1em;}
.qa-top-users-label {border:1px solid #A6A6A6; border-right:1px dashed #A6A6A6; padding:6px 16px 6px 12px; text-align:;right;}
.qa-top-users-score {border:1px solid #A6A6A6; border-left:none; background:#D9E3EA; color:#414944; text-align:left; padding:6px 12px;}
.qa-top-users-spacer {padding:0 4px;}

/* Question view */

.qa-q-view-main {float:left; width:550px;padding: 0 0 0 1.2em}
.qa-q-view-content {font-size:15px; margin-bottom:16px;}
.qa-q-view-avatar {display:inline-block; vertical-align:middle; margin-right:8px;}
.qa-q-view-meta {display:inline-block; vertical-align:middle; font-size:13px;}
.qa-q-view-follows {font-size:13px; margin-bottom:12px;}
.qa-q-view-when-data {font-weight:bold;}
.qa-q-view-who-title {font-size:80%; font-weight:bold; color:#900707;}
.qa-q-view-points-data {font-weight:bold;}
.qa-q-view-tags {margin-bottom:12px;}
.qa-q-view-tag-list {list-style:none; margin:0; padding:0;}
.qa-q-view-tag-item {display:inline;}
.qa-q-view-buttons {text-align:left; clear:both;}
.qa-q-view-c-list {clear:both; margin:24px 0 0 24px; border-top:1px dotted #666;}

.qa-q-view-hidden {}
	.qa-q-view-hidden .qa-voting {background:#fff;color:#ccc;}
	.qa-q-view-hidden .qa-q-view-content {color:#999;}
	.qa-q-view-hidden .qa-q-view-meta {color:#ccc;}
	.qa-q-view-hidden .qa-user-link {color:#999;}
	.qa-q-view-hidden .qa-q-view-who-title {color:#999;}
	.qa-q-view-hidden .qa-category-link {color:#999;}
	.qa-q-view-hidden .qa-tag-link {background-color:#ccc;}

/* Answer view  */

.qa-a-list-item {margin-bottom:40px; zoom:1; padding-bottom:1px;} /* zoom for IE, padding for early FF */
.qa-a-list-item-hidden {}
	.qa-a-list-item-hidden .qa-voting {background:#FFF; color:#ccc;}
	.qa-a-list-item-hidden .qa-a-item-content {color:#999;}
	.qa-a-list-item-hidden .qa-a-item-what {color:#ccc;}
	.qa-a-list-item-hidden .qa-a-item-meta {color:#ccc;}
	.qa-a-list-item-hidden .qa-a-item-who-title {color:#999;}
	.qa-a-list-item-hidden .qa-user-link {color:#999;}

.qa-a-item-main {float:left; padding: 0 0 0 1.2em; width:550px; display:inline-block;} /* inline-block for IE */
.qa-a-item-selected {background-color:#d7e3e1; border-radius:8px; padding:10px;}
.qa-a-item-content {font-size:14px; margin:0;}
.qa-a-item-avatar {display:inline-block; vertical-align:middle; margin-right:8px;}
.qa-a-item-meta {display:inline-block; vertical-align:middle; font-size:13px;}
.qa-a-item-when-data {font-weight:bold;}
.qa-a-item-who-title {font-size:80%; font-weight:bold; color:#900707;}
.qa-a-item-points-data {font-weight:bold;}
.qa-a-item-buttons {text-align:left; margin-top:12px; clear:both;}
.qa-a-item-c-list {clear:both; margin:12px 0 0 12px; border-top:1px dotted #666;}

/* Answer selection */

.qa-a-selection {float:left; width:48px; text-align:center; padding:6px 0;}

.qa-a-select-button,.qa-a-select-hover {background:url(select-star.png) no-repeat; border:0; height:28px; width:30px;}
	.qa-a-select-button {background-position: 0 -28px;}
	.qa-a-select-hover,.qa-a-select-button:hover {background-position: 0 -56px;}

.qa-a-unselect-button,.qa-a-unselect-hover {background:url(selected-star.png) no-repeat; border:0; height:28px; width:30px;}
	.qa-a-unselect-button {background-position: 0 0;}
	.qa-a-unselect-hover,.qa-a-unselect-button:hover {background-position: 0 -28px;}

.qa-a-selected {background:url(selected-star.png) no-repeat 0 0; height:28px; width:30px; margin:0 auto;}
.qa-a-selected-text {font-size:13px; font-weight:bold; display:block; margin-top:6px;}

/* Comments */

.qa-c-list-item {border-bottom:1px dotted #666; padding:6px; padding-right:0;}
.qa-c-item-hidden {}
	.qa-c-item-hidden .qa-c-item-content {color:#bbb;}
	.qa-c-item-hidden .qa-c-item-link {color:#aaf;}
	.qa-c-item-hidden .qa-c-item-what {color:#ccc;}
	.qa-c-item-hidden .qa-c-item-meta {color:#ccc;}
	.qa-c-item-hidden .qa-c-item-who-title {color:#999;}
	.qa-c-item-hidden .qa-user-link {color:#999;}

.qa-c-item-link {display:block; margin-bottom:6px;}
.qa-c-item-content {display:block; color:#333; font-size:13px; margin-bottom:6px;}
.qa-c-item-footer {position:relative; height:1%;} /* height for IE6 */
.qa-c-item-avatar {display:inline-block; vertical-align:middle; margin-right:4px;}
.qa-c-item-meta {display:inline-block; vertical-align:middle; font-size:10px; color:#666;}
.qa-c-item-who-title {font-size:80%; font-weight:bold; color:#900707;}
.qa-c-item-who-points {display:none;}
.qa-c-item-buttons {

    display: block;
    float: right;
    position: relative;

}

/* Footer parts */

.qa-nav-footer-list {float:right; list-style-type:none; padding:0; margin:0;}
.qa-nav-footer-item {float:right; margin-left:12px;}
.qa-nav-footer-link {color:#dd4814; text-decoration:none !important;}
	.qa-nav-footer-link:hover {color:#494949;}
.qa-attribution {float:left;}
	.qa-attribution a {color:#FFF; text-decoration:underline; !important;}
	.qa-attribution a:hover {color:#f5d495;}

/* Classes in HTML passed to theme class */

.qa-user-link {color:#DD4814; font-weight:bold;}
.qa-category-link {color:#4D1F41; font-weight:bold;}
.qa-tag-link {font-size:13px; color:#fff; font-weight:bold; padding:0.3em 0.4em 0.3em 0.5em; margin-bottom:3px; background-color:#4D1F41; display:-moz-inline-stack; display:inline-block; vertical-align:middle; text-decoration:none !important;border-radius: 50px;} /* inline-block for IE, -moz-inline-stack for early FF */
	.qa-tag-link:hover {text-decoration:none; background-color:#F15D22;}
	.qa-q-item-tag-item a:hover{color:#fff;}
.qa-avatar-image {border:0; vertical-align:middle;}
.qa-avatar-link,.qa-avatar-link:hover {text-decoration:none;}
